      <span class="tabbar__item" data-selector="tabbar/item" data-id="1">1</span>
      <span class="tabbar__item tabbar__item--hidden" data-selector="tabbar/item" data-id="2" >2</span>
      <span class="tabbar__item tabbar__item--hidden" data-selector="tabbar/item" data-id="3" >3</span>

    </div>

  </div>

