{% macro default() %}

  <div class="tabbar">

    <div class="tabbar__head">

      <a class="tabbar__tab" id="tab__active" data-selector="tabbar/tab" data-id="1" href="#!">
        <h1>Unsere Sendungen</h1>
      </a>

      <a class="tabbar__tab" id="tab2" data-selector="tabbar/tab" data-id="2" href="#!">
